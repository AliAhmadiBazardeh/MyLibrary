@page
@model MyLibrary.Pages.BookList.EditModel
@{
}

<br />
<h2 class="text-info">Edit '@Model.Book.Title'</h2>
<hr />
<div class="border container" style="padding: 30px">
    <form method="post">
        <input type="hidden" asp-for="Book.Id" value="@Model.Book.Id" />
        <div asp-validation-summery="All"></div>
        <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Book.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Title" />
                <span class="text-danger" asp-validation-for="Book.Title"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" />
                <span class="text-danger" asp-validation-for="Book.Author"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 text-right">
            </div>
            <div class="col-6">
                <input type="submit" value="Update" class="btn btn-outline-primary" />
                <a class="btn btn-link" asp-page="Index">Back to list</a>
            </div>
        </div>

    </form>
</div>